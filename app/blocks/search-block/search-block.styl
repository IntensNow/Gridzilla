.search-block
  position relative
  width 200px
  
  &__input
    display inline-block
    box-sizing border-box
    width 100%
  
  &__submit
    position absolute
    top 0
    right 0
    width 20%
    height 100%
    background-color #efeded
    background-image url(../../images/sprites/spritesheet.png)
    background-repeat no-repeat
    background-position -165px 0
    border none
    
    &:focus
      outline none
      box-shadow 0 0 1px .5px #dddddd